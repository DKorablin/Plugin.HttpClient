<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFrameworks>net35;net8.0-windows</TargetFrameworks>
		<UseWindowsForms>true</UseWindowsForms>
		<OutputType>Library</OutputType>
		<RootNamespace>Plugin.HttpClient</RootNamespace>
		<GenerateAssemblyInfo>false</GenerateAssemblyInfo>
		<Configuration>Debug</Configuration>
		<Deterministic>false</Deterministic>
		<GenerateDocumentationFile>False</GenerateDocumentationFile>
		<NoWarn>$(NoWarn);SYSLIB0011;CA1416</NoWarn>
		<DefineConstants>$(DefineConstants)</DefineConstants>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)'=='Release'">
		<Optimize>true</Optimize>
		<PublishSingleFile>true</PublishSingleFile>
		<TreatWarningsAsErrors>false</TreatWarningsAsErrors>
	</PropertyGroup>

	<ItemGroup Condition="'$(TargetFramework)' != 'net35'">
		<AssemblyAttributes Include="AssemblyMetadata">
			<_Parameter1>ProjectUrl</_Parameter1>
			<_Parameter2>https://github.com/DKorablin/Plugin.HttpClient</_Parameter2>
		</AssemblyAttributes>
	</ItemGroup>

	<!--nuspec-->
	<PropertyGroup>
		<PackageId>AlphaOmega.SAL.Plugin.HttpClient</PackageId>
		<Version>$(Version)</Version>
		<Title>HTTP Test Client &amp; Server plugin</Title>
		<Description>HTTP Test client &amp; server plugin compatible with SAL applications</Description>
		<Authors>Danila Korablin</Authors>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageReadmeFile>docs\README.md</PackageReadmeFile>
		<RepositoryUrl>https://github.com/DKorablin/Plugin.HttpClient</RepositoryUrl>
		<PackageTags>SAL plugin http server client test</PackageTags>
	</PropertyGroup>
	<ItemGroup>
		<Compile Include="..\WinForms.Shared\SearchGrid\SearchGrid.cs">
			<Link>UI\SearchGrid.cs</Link>
			<SubType>UserControl</SubType>
		</Compile>
		<Compile Include="..\WinForms.Shared\SearchGrid\SearchGrid.designer.cs">
			<Link>UI\SearchGrid.designer.cs</Link>
			<DependentUpon>SearchGrid.cs</DependentUpon>
		</Compile>
		<EmbeddedResource Include="..\WinForms.Shared\SearchGrid\SearchGrid.resx">
			<Link>UI\SearchGrid.resx</Link>
			<DependentUpon>SearchGrid.cs</DependentUpon>
		</EmbeddedResource>
	</ItemGroup>

	<ItemGroup>
		<None Include="..\README.md" Pack="true" PackagePath="\docs" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="AlphaOmega.ObjectListView" />
		<PackageReference Include="AlphaOmega.PEReader" />
		<PackageReference Include="SAL.Windows">
			<ExcludeAssets>runtime</ExcludeAssets>
		</PackageReference>
	</ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)' == 'net35'">
		<Reference Include="System.Design" />
		<Reference Include="System.Runtime.Serialization" />
		<Reference Include="System.ServiceModel.Web" />
	</ItemGroup>
</Project>